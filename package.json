{
  "name": "twpub-tools",
  "version": "0.1.0",
  "description": "Tools for working with TWPUBs",
  "main": "./epub2twpub/index.js",
  "author": "",
  "url": "https://github.com/tiddly-gittly/Epub2twpub",
  "license": "BSD-3-Clause",
  "bin": "./app.js",
  "pkg": {
    "scripts": [
      "epub2twpub/**/*.js"
    ]
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.8",
    "css": "^3.0.0",
    "jsdom": "22.1.0",
    "jszip": "^3.10.1",
    "tiddlywiki": "5.3.0",
    "npm-check-updates": "^16.10.12",
    "tiddlywiki-plugin-dev": "^0.0.39"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "@modern-js/tsconfig": "^2.24.0",
    "@types/node": "^20.3.1",
    "dprint": "^0.37.1",
    "eslint-config-tidgi": "1.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "tw5-typed": "^0.3.5",
    "typescript": "^5.1.3"
  },
  "scripts": {
    "dev": "tiddlywiki-plugin-dev dev",
    "build": "npm run clean && tiddlywiki-plugin-dev build",
    "publish": "npm run clean && tiddlywiki-plugin-dev publish",
    "reset": "rimraf ./**/node_modules",
    "clean": "rimraf dist && rimraf output",
    "prepare": "husky install",
    "update": "npm-check-updates -u",
    "new": "tiddlywiki-plugin-dev new",
    "build:library": "npm run clean && tiddlywiki-plugin-dev build --library --output dist/library",
    "publish:offline": "npm run clean && tiddlywiki-plugin-dev publish --offline",
    "test": "node epub2twpub/test.js",
    "testApp": "node app.js",
    "pkg": "pkg . -t  node18-win-x64 --out-path output/dist",
    "build-epubs": "node -e \"require('./bin/slice-epubs').slice_epubs();\""
  },
  "engines": {
    "node": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ],
    "*.{js,jsx,mjs,mjsx,cjs,cjsx}": [
      "node --max_old_space_size=8192 ./node_modules/eslint/bin/eslint.js --fix --color --cache --quiet"
    ]
  }
}